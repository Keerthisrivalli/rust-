fn main() {
    let person: (&str, i32, f64) = ("Alice", 30, 65.5);
    println!("Name: {}", person.0);
    println!("Age: {}", person.1);
    println!("Weight: {} kg", person.2);

    let (name, age, weight) = person;
    println!("\nAccessing using destructuring:");
    println!("Name: {}", name);
    println!("Age: {}", age);
    println!("Weight: {} kg", weight);
}
